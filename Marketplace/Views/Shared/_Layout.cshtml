<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Marketplace</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-light bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav d-flex">
                     @if (!User.Identity.IsAuthenticated)
                     {
                         <li class="nav-item">
                             <a class=" btn btn-outline-dark nav-link text-white" asp-area="" asp-controller="Auth" asp-action="SignIn" style="max-width: 72px">Sign in</a>
                         </li>
                         <li class="nav-item">
                             <a class=" nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Auth" asp-action="SignUp" style="max-width: 72px">Sign up</a>
                         </li>
                     }
                     else
                     {
                         <li class="nav-item">
                             <a class="nav-link text-white" asp-area="" asp-controller="Posts" asp-action="AddPost">Добавить объявление</a>
                         </li>
                         @*<li class="nav-item">
                             <a class="nav-link text-white" asp-area="" asp-controller="Posts" asp-action="MyPosts">Мои объявления</a>
                         </li>*@
                         <li class="nav-item">
                             <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Logout">Sign out</a>
                         </li>
                     }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - Marketplace
    </div>
</footer>

<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>